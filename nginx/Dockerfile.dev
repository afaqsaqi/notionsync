FROM nginx:alpine

# Install Certbot and dependencies
RUN apk add --no-cache \
    certbot \
    bash \
    curl \
    openssl \
    && rm -rf /var/cache/apk/*
RUN apk add lsof
RUN apk add bind-tools

COPY ./nginx/nginx.conf /etc/nginx/nginx.conf

COPY ./nginx/entrypoint.sh /entrypoint.sh
RUN chmod +x /entrypoint.sh

CMD ["./entrypoint.sh"]